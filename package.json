{
  "name": "adv-ears",
  "version": "0.1.0",
  "description": "Formal requirements language tool that automatically generates UML diagrams from structured natural language requirements",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check": "npm run lint && npm run typecheck && prettier --check \"src/**/*\" && npm test",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/cli/cli.js",
    "knip": "knip"
  },
  "keywords": [
    "requirements",
    "uml",
    "parser",
    "formal-language",
    "diagram-generation"
  ],
  "author": "Amir Arad <greenshade@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^11.0.3",
    "commander": "^12.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
